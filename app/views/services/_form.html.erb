<%= form_for service, :html => { :id => 'service_form' } do |f| %>
  <%= render "layouts/errors", :model_error => service %>

  <%= f.label :service_type_id %>
  <div class="form-group">
    <div class="form-line">
      <%= f.select :service_type_id, options_from_collection_for_select(@service_type, "id", "name", service.service_type_id), {}, :class => 'form-control' %>
    </div>
  </div>
  
  <%= f.label :client_id %> 
  <div class="form-group">
    <div class="form-line">
      <%= f.select :client_id, options_from_collection_for_select(@client, "id", "name", service.client_id), {}, :class => 'form-control' %>
    </div>
  </div>

  <div class="field m-t-10 m-b-10">  
    <%= f.check_box :active, :class => 'chk-col-green filled-in' %>
    <%= f.label :active %>
  </div>
  <div class="field m-t-10 m-b-10">
    <%= f.check_box :suspended, :class => 'chk-col-red filled-in' %>
    <%= f.label :suspended %>
    <% if service.suspended.present? %>
      <span class="label bg-grey">
        <%= service.suspended_at.strftime("%m/%d/%Y %H:%M") %>
      </span>
    <% end %>
  </div>

  <%= f.label :info %>
  <div class="form-group">
    <div class="form-line">
      <%= f.text_area :info, :class => 'form-control no-resize', :placeholder => 'Add some information about this service', :rows => 4  %>
    </div>

  <%= f.submit t('form.send'), :class => 'btn btn-primary m-t-15 waves-effect' %>
<% end %>
